
mixin navigation()
  | {% for section in site.sections %}
  li
    a(href='javascript:void') {{section}}
    ul
      | {% for post in site.categories[section] %}
      li
        a(href='{{post.url}}') {{post.title}}
      | {% endfor %}
  | {% endfor %} 
  li
    a(href='') {{page.tags}}
    ul
      | {% for tag in site.tags %}
      li 
        a(href='') {{ tag[0] }}
      | {% endfor %}
