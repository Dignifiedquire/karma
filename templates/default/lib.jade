mixin sidebar(dirs)
  .well.sidebar-nav
    ul.nav.nav-list
      each files, dir in dirs
        li.nav-header= dir
          each file in files
            li
              a(href='#{file.link}')= file.name


mixin navigation(dirs)
  ul.nav
    each files, dir in dirs
      li.dropdown
        a.dropdown-toggle(href='#', data-toggle='dropdown')
          = dir
          b.caret
        ul.dropdown-menu
          each file in files
            li
              a(href='#{file.link}')= file.name
        
